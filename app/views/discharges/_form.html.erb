<%= form_for @discharge, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :ipdays, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :ipdays, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :active, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :active, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phpvisits, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :phpvisits, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dropreason_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :dropreason_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :otherdetail, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :otherdetail, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            discharges_path, :class => 'btn btn-default' %>
 
<% end %>
