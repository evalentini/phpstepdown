<%- model_class = Discharge -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ipdays) %>:</strong></dt>
  <dd><%= @discharge.ipdays %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @discharge.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phpvisits) %>:</strong></dt>
  <dd><%= @discharge.phpvisits %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dropreason_id) %>:</strong></dt>
  <dd><%= @discharge.dropreason_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:otherdetail) %>:</strong></dt>
  <dd><%= @discharge.otherdetail %></dd>
  <dt><strong><%= model_class.human_attribute_name(:facility_id) %>:</strong></dt>
  <dd><%= @discharge.facility_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              discharges_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_discharge_path(@discharge), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              discharge_path(@discharge),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
