<%= form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <label for="name" class="col-sm-4 control-label">Facility Name</label>
   	<div class="col-sm-8">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
	<label for="name" class="col-sm-4 control-label"></label>
	<div class="col-sm-8">
		 <%= f.submit nil, :class => 'btn btn-primary' %>
	</div>
  </div>
  
  
  <div class="form-group">
	<label for="name" class="col-sm-4 control-label"></label>
	<div class="col-sm-8">
	     <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	               locations_path, :class => 'btn btn-default' %>
	</div>
  </div>
  
  
<% end %>
