<div class="row" style="margin-top: 25px;">
	<div class="col-xs-12">
		<div class="alert alert-danger">
			This site can only be accessed by employees of Springstone Inc.  
			Please enter the access code provided by the php step down report website administrator to continue.
		</div>
	</div>
</div>


<div class="row">
<div class="col-xs-3"></div>
<div class="col-xs-5">
 
  
		<form class="form-horizontal" method="post" role="form">
		<%= token_tag(nil) %>
		<div class="form-group">
		  <label for="accesscode" class="col-sm-3 control-label">Access Code</label>
		  <div class="col-sm-9">
		    <input type="password" name="accesscode" class="form-control" id="accesscode" placeholder="Access Code">
		  </div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-3 control-label" for="usertype">Role</label>
			<div class="col-sm-9">
				<select id="usertype" class="form-control" name="usertype">
						<option selected="selected" value="user">Springstone Employee</option>
						<option value="admin">Website Administrator</option>
				</select>
			</div>
		</div>
		
		<div class="form-group hidden" id="adminpassworddiv">
		  <label for="adminpassword" class="col-sm-3 control-label">Admin Pwd</label>
		  <div class="col-sm-9">
		    <input type="password" name="adminpassword" class="form-control" id="adminpassword" placeholder="Admin Password">
		  </div>
		</div>
		
		<div class="form-group">
		  <div class="col-sm-offset-3 col-sm-9">
		    <button type="submit" class="btn btn-success">Enter</button>
		  </div>
		</div>
		</form>
  
<div class="col-xs-4"></div>
</div>
</div>
</div>
